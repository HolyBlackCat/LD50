{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "gdb",
            "request": "launch",
            // The `"terminal": ""` part creates a separate terminal on Windows. We need it to be able to Ctrl+C it to update the checkpoints after placing them.
            // On Linux checkpoints work properly without this trick. And also, on Linux it causes a new terminal to spawn each time you debug, which is bad, so we don't use it.
            "windows": {"target": "./imp-re.exe", "terminal": ""},
            "linux": {"target": "./imp-re"},
            "cwd": "${workspaceRoot}/bin",
            "valuesFormatting": "prettyPrinters",
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "Build",
            "autorun": [
                // Catch exceptions by default.
                "catch throw",
                // Register pretty-printers.
                // Normally they are auto-loaded, but it doesn't work when libstdc++'s `.so` is in a non-default path.
                // Following force-loads the printers, but the command is gcc version-dependent.
                // NOTE: If GDB says `ModuleNotFoundError: No module named 'libstdcxx'`, then you need to update the path given to `sys.path.insert()`.
                "python import sys; sys.path.insert(0, '/usr/share/gcc/python'); from libstdcxx.v6.printers import register_libstdcxx_printers; register_libstdcxx_printers(None)",
            ],
        },
        {
            "name": "Debug (LLDB)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/bin/imp-re",
            "cwd": "${workspaceRoot}/bin",
            "preLaunchTask": "Build",
        }
    ]
}
